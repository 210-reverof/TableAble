<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/pplrty_title_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shop_information"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#EF8345"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_information"
        app:srcCompat="@drawable/title3" />

    <ImageView
        android:id="@+id/board"
        android:layout_width="387dp"
        android:layout_height="536dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:srcCompat="@drawable/board" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="신전 떡볶이"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/shop_information"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/shop_information"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/shop_adress"
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="충청남도 아산시 신창면 순천향로 25"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/shop_information"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/shop_information"
        app:layout_constraintTop_toBottomOf="@+id/shop_name" />

    <TextView
        android:id="@+id/text1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:text="현재 복잡도"
        android:textColor="#4A7D30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <TextView
        android:id="@+id/text1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="50dp"
        android:text="여유"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="114dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1_3"
        app:srcCompat="@drawable/density_img_0" />

    <TextView
        android:id="@+id/text2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="115dp"
        android:text="이후 여석 예측"
        android:textColor="#4A7D30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1_1" />

    <TextView
        android:id="@+id/text2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="10분 후"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2_1" />

    <TextView
        android:id="@+id/text2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="4dp"
        android:text="여석"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/text2_4"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <TextView
        android:id="@+id/text2_4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="4dp"
        android:text="n개"
        android:textColor="#8CD370"
        app:layout_constraintEnd_toStartOf="@+id/text2_5"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <TextView
        android:id="@+id/text2_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="50dp"
        android:text="예상"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <TextView
        android:id="@+id/text3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="115dp"
        android:text="이후 복잡도 예측"
        android:textColor="#4A7D30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2_1" />

    <TextView
        android:id="@+id/text3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="10시"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3_1" />

    <TextView
        android:id="@+id/text3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:text="11시"
        android:textColor="#BFBFBF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3_2" />


    <TextView
        android:id="@+id/text3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="여유"
        android:textColor="#92D050"
        app:layout_constraintBottom_toBottomOf="@+id/text3_2"
        app:layout_constraintEnd_toStartOf="@+id/text3_4_2"
        app:layout_constraintTop_toTopOf="@+id/text3_2" />

    <TextView
        android:id="@+id/text3_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="혼잡"
        android:textColor="#F94311"
        app:layout_constraintBottom_toBottomOf="@+id/text3_3"
        app:layout_constraintEnd_toStartOf="@+id/text3_5_2"
        app:layout_constraintTop_toTopOf="@+id/text3_3" />

    <TextView
        android:id="@+id/text3_4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:text="예상"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/text3_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text3_4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text3_5_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:text="예상"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/text3_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text3_5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/graphbutton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#92D050"
        android:text="시간대별 예측 복잡도 그래프"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/board" />


</androidx.constraintlayout.widget.ConstraintLayout>